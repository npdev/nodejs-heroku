extends layout

block content
  .container
      .row
        .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
          if error && error.length > 0
            p= 'Error: ' + error
          else
            if !posts || posts.length == 0
              p There is no available posts
            else
              each post in posts
               .post-preview
                  a(href= post.url)
                    h2.post-title
                      = post.title
                    h3.post-subtitle
                      = post.content
                  p.post-meta
                    = 'Posted on ' + post.created_at